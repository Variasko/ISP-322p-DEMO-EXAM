<Window x:Class="EquipmentRepair.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentRepair"
        mc:Ignorable="d"
        TextElement.FontSize="30"
        Title="MainWindow" Height="300" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Логин" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Content="Пароль" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <TextBox Name="LoginEnter" Grid.Column="1" Margin="20"/>
        <PasswordBox Name="PasswordEnter" Grid.Column="1" Grid.Row="1" Margin="20"/>

        <Button Name="SignInButton" Grid.Row="2" Grid.ColumnSpan="2" Margin="100 20" Content="Войти" Click="SignInButton_Click"/>

    </Grid>
</Window>
